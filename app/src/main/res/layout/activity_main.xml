<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/myGray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dimfcompany.bankapp.MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:background="@color/headerBG2"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ToggleButton
                android:id="@+id/togg1"
                android:textOn="Вклады"
                android:textOff="Вклады"
                android:textColor="@color/orange"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/toggle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ToggleButton
                android:id="@+id/togg2"
                android:textOn="Кредитные карты"
                android:textOff="Кредитные карты"
                android:textColor="@color/orange"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/toggle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ToggleButton
                android:id="@+id/togg3"
                android:textOn="Кредиты"
                android:textOff="Кредиты"
                android:textColor="@color/orange"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/toggle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>






    </RelativeLayout>



    <FrameLayout
        android:id="@+id/mainFragment"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
