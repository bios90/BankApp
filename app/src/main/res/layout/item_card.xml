<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardCView"

        app:cardCornerRadius="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/myWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myWhite">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cardName"

                        android:fontFamily="@font/museosanscyrl_500"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кредит Афигенный"
                        android:textColor="@color/miuiDarkGray"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cardBankName"

                        android:fontFamily="@font/museosanscyrl_300"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Банк тоже афигенный"
                        android:textColor="@color/miuiDarkGray"
                        android:textSize="16dp" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/cardBankImage"

                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_width="95dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/myWhite"
                    android:src="@drawable/sberbank_135x85" />

            </LinearLayout>
            <View
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/miuiLightGray" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/museosanscyrl_300"
                    android:text="Кредитный лимит :"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/miuiDarkGray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/cardLimit"

                    android:fontFamily="@font/museosanscyrl_500"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 000 000 р"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="16dp" />


            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/museosanscyrl_300"
                android:paddingLeft="20dp"
                android:text="Льготный период :"
                android:layout_weight="1"
                android:textColor="@color/miuiDarkGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/cardSrok"

                android:fontFamily="@font/museosanscyrl_500"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="55 дней"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="16dp" />
        </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/miuiLightGray" />

            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/museosanscyrl_300"
                    android:text="Ставка"
                    android:layout_weight="2"
                    android:textColor="@color/miuiDarkGray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
                <TextView
                    android:fontFamily="@font/museosanscyrl_300"
                    android:text="Cash Back"
                    android:layout_weight="2"
                    android:textColor="@color/miuiDarkGray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
                <TextView
                    android:fontFamily="@font/museosanscyrl_300"
                    android:text="Валюты"
                    android:layout_weight="2"
                    android:textColor="@color/miuiDarkGray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/museosanscyrl_500"
                    android:id="@+id/cardStavka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="от 8%"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="18dp" />

                <TextView
                    android:fontFamily="@font/museosanscyrl_500"
                    android:layout_gravity="center"
                    android:id="@+id/cardCashBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="есть"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="16dp" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/cardImgRub"

                        android:src="@drawable/roubleyes"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/cardImgDol"

                        android:src="@drawable/dollarno"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="18dp" />
                    <ImageView
                        android:id="@+id/cardImgEuro"

                        android:src="@drawable/eurono"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="18dp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>