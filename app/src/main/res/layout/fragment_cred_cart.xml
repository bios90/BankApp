        </RelativeLayout-->

            <!--com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/credCerdDistSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
