<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/rounded_header_all"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogTitle"

        android:layout_marginTop="4dp"
        android:fontFamily="@font/museosanscyrl_700"
        android:text="Ошибка"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/orange" />

    <TextView
        android:fontFamily="@font/museosanscyrl_300"
        android:id="@+id/dialogErrorMSG"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Отсутсвует соединение с сетью,проверьте настройки устройства."
        android:textAlignment="textStart"
        android:textColor="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/dialogOKButt"

        android:fontFamily="@font/museosanscyrl_700"
        android:text="Ok"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="end"
        android:background="@drawable/roundedozornoi"
        android:layout_width="90dp"
        android:layout_height="32dp" />

</LinearLayout>