<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/myWhite"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankFullActvt">

    <TextView
        android:fontFamily="@font/museosanscyrl_700"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textAlignment="center"
        android:text="Сбербанк России"
        android:background="@color/header2"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/header2"
                    android:text="г. Москва, ул. Вавилова, д. 19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/orange"
                    android:text="www.sberbank.ru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/header2"
                    android:text="8 800 555-55-50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:background=""
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="0"
                android:src="@drawable/sberbank_135x85"
                android:layout_width="110dp"
                android:layout_height="70dp" />

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>